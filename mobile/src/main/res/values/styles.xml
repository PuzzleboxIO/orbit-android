<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Opt out of Android 15+ forced edge-to-edge. Without this, content draws
             behind the status bar and the ActionBar appears below the tiles instead of
             at the top. AppCompat 1.7.0 respects this attribute on API 35+. -->
        <item name="android:windowOptOutEdgeToEdgeEnforcement">true</item>
        <!-- Customize your theme here. -->
        <item name="android:dialogTheme">@style/CustomDialog</item>
    </style>

    <style name="CustomDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">false</item>
    </style>

</resources>
